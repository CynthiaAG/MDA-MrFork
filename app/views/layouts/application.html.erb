<!DOCTYPE html>
<html>
<head>
  <title>MrFork</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script src="//maps.google.com/maps/api/js?key=AIzaSyCG7JicelgS2wuOQPYG1IqrJ171ktOp364"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  <script src='//underscorejs.org/underscore-min.js' type='text/javascript'></script>
</head>

<body>
<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <div class="row">
        <div class="col-md-4">
          <%= image_tag 'MrFork-Logo.png', width: '60px', alt: 'logo' %>
        </div>
        <div class="col-md-4">
          <%= link_to 'Mr.Fork', '/', class: 'navbar-brand' %>
        </div>
      </div>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <form class="navbar-form navbar-right">
        <% if user_signed_in? %>
            <%= image_tag 'perfil.png', width: '35px', alt: 'logo' %>
            Bienvenid@, <%= link_to "#{current_user.username}", edit_user_registration_path, :class => 'navbar-link' %>
            <%= link_to "Desconectar", destroy_user_session_path, method: :delete, :class => 'btn btn-xs btn-warning' %>
        <% else %>
          <%= link_to "Iniciar sesiÃ³n", new_user_session_path, :class => 'btn btn-primary' %> <%= link_to "Registrarse", new_user_registration_path, :class => 'btn btn-success' %>
        <% end %>
      </form>
    </div>
  </div>
</nav>

<div class="container">
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <%= yield %>
</div>

</body>
</html>