<head>
    <%= stylesheet_link_tag 'admin' %>
</head>

<body>
<p id="notice"><%= notice %></p>

<h1> Administrator control panel</h1>

<div id="manage_users">

<h2>Users</h2>
<table id="user_table" style="overflow-x:auto;">
  <thead>
    <tr>
      <th>Username</th>
      <th>User email</th>
      <th>role</th>
      <th>last sing in</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.username%></td>
        <td><%=user.email%></td>
        <td><%if user.role == 1%>
          administrator
          <%else%>
            user
        <%end%></td>
        <td><%=user.current_sign_in_at%></td>
        <td><%=user.created_at%></td>
        <td><%= if (user.role!=2)
          link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
        end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<div id=manage_restaurants style="overflow-x:auto;" >
<h2>Restaurants</h2>

<table id="restaurants_table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

<%= link_to 'New Restaurant', new_restaurant_path %>
</body>
