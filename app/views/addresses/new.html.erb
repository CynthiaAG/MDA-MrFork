<%= form_with(model: [@restaurant, Address.new], local: true) do |form| %>

  <div class="field form-group">
    <%= form.label "Calle:" %>
    <%= form.text_field :street, id: :address_street, :class=>"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label "Ciudad:" %>
    <%= form.text_field :city, id: :address_city, :class=>"form-control"  %>
  </div>

  <div class="field form-group">
    <%= form.label "Código Postal:" %>
    <%= form.number_field :postalCode, id: :address_postalCode, :class=>"form-control"  %>
  </div>

  <div class="field form-group">
    <%= form.label "E-mail:" %>
    <%= form.text_field :email, id: :email, :class=>"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label "Teléfono:" %>
    <%= form.number_field :tlf, id: :address_tlf, :class=>"form-control"  %>
  </div>

  <div class="field form-group">
    <%= form.label :latitude %>
    <%= form.number_field :latitude, id: :address_latitude, :class=>"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :longitude %>
    <%= form.number_field :longitude, id: :address_longitude, :class=>"form-control" %>
  </div>

  <div class="field" hidden>
    <input id="address_restaurantid" type="number" name="address[restaurant_id]" value="<%= @restaurant.id %>" />
  </div>

  <div class="actions">
    <%= form.submit "Guardar", :class=>"btn btn-default" %>
  </div>

<% end %>

