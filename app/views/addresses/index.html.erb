<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>Postalcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.postalCode %></td>
        <td><%= link_to 'Show', [address.restaurant, address] %></td>
        <td><%= link_to 'Edit', [:edit, address.restaurant, address] %></td>
        <td><%= link_to 'Destroy', [address.restaurant, address],
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

