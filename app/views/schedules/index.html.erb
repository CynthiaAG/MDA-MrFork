<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Weekday</th>
      <th>Openingtime</th>
      <th>Closingtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.weekDay %></td>
        <td><%= schedule.openingTime %></td>
        <td><%= schedule.closingTime %></td>
        <td><%= link_to 'Show', [@restaurant, schedule] %></td>
        <td><%= link_to 'Edit', [:edit, @restaurant, schedule] %></td>
        <td><%= link_to 'Destroy', [@restaurant, schedule], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

