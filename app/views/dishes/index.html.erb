<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= image_tag dish.image.thumb %></td>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= link_to 'Show', [dish.restaurant, dish] %></td>
        <td><%= link_to 'Edit', [:edit, dish.restaurant, dish] %></td>
        <td><%= link_to 'Destroy', [dish.restaurant, dish], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

