<%= stylesheet_link_tag "dishes.css" %>

<div class="container editHeader">
  <div class="col-md-12">
    <h1>Editar restaurante: <%= @restaurant.name %></h1>
  </div>
</div>

<div class="container">
  <div class="col-md-3">
    <div class="list-group">
      <%= link_to "Restaurante", edit_restaurant_path(@restaurant), :class => "list-group-item" %>
      <%= link_to "Información", edit_restaurant_address_path(@restaurant, @restaurant.address), :class => "list-group-item" %>
      <%= link_to "Menú", restaurant_dishes_path(@restaurant), :class => "list-group-item active" %>
      <%= link_to "Fotos", restaurant_photos_path(@restaurant), :class => "list-group-item" %>
      <%= link_to "Horarios", restaurant_schedules_path(@restaurant), :class => "list-group-item" %>
      <%= link_to "Volver", restaurant_path(@restaurant), :class => "list-group-item list-group-item-danger" %>
    </div>
  </div>

  <div class="col-md-9">

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Imagen</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @dishes.each do |dish| %>
        <tr>
          <td><%= image_tag dish.image.thumb %></td>
          <td><%= dish.name %></td>
          <td><%= dish.description %></td>
          <td><%= dish.price %> €</td>
          <td>
            <%= link_to [:edit, dish.restaurant, dish] do %>
              <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
            <% end %>
          </td>
          <td>
            <%= link_to [dish.restaurant, dish], method: :delete, data: {confirm: 'Are you sure?'} do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to "Nuevo plato", new_restaurant_dish_path, :class=>"btn btn-default", "role" => "button" %>
  </div>
</div>