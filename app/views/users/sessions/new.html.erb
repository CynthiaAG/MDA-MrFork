
<div class="container">
  <div class="row main">
    <div class="panel-heading">
      <div class="panel-title text-center">
        <h1 class="title text-primary">Mr. Fork</h1>
        <h2 class="">Iniciar sesión</h2>
        <hr/>
      </div>
    </div>
  </div>
    <div class="form-horizontal text-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-md-3 col-md-offset-3">

          <div class="form-group">
            <%= f.label :username %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "email", :class=>"form-control" %>
          </div>

          <div class="form-group ">
            <%= f.label "Contraseña" %><br />
            <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group ">
              <%= f.check_box :remember_me %>
              <%= f.label "Recuerdame" %>
            </div>
          <% end -%>
          <div class="actions form-group">
            <%= f.submit "Iniciar sesión",:class=>"btn btn-success"  %>
          </div>

          <div class="form-group">
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>
