
<div class="container text-center">
  <div class="row main">
    <div class="panel-heading">
      <div class="panel-title text-center">
        <h1 class="title text-primary">Mr. Fork</h1>
        <h2 class="">Formulario de registro</h2>
        <hr/>
      </div>
    </div>
  </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :username %><br/>
          <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      </div>

      <div class="form-group">
        <%= f.label "Rol" %><br/>
        <%= f.select(:role, options_for_select([['Usuario', 1], ['Dueño', 2]])) %>
      </div>

      <div class="form-group">
        <%= f.label "Correo electrónico" %><br/>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label "Teléfono" %><br/>
        <% if 9 %>
          <em>(<%= 9 %> caracteres necesarios)</em>
        <% end %><br/>
        <%= f.text_field :tlf,autocomplete: "off"%>
      </div>
      <div class="form-group">
        <%= f.label "Contraseña" %><br/>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label "Contraseña" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Aceptar" %>
      </div>

    <% end %>
    <%= render "users/shared/links" %>

</div>



