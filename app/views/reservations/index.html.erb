<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Personcount</th>
      <th>Restaurant</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.date %></td>
        <td><%= reservation.description %></td>
        <td><%= reservation.personCount %></td>
        <td><%= reservation.restaurant_id %></td>
        <td><%= reservation.user_id %></td>
        <td><%= link_to 'Show', [@restaurant, reservation] %></td>
        <td><%= link_to 'Edit', [:edit, @restaurant, reservation] %></td>
        <td><%= link_to 'Destroy', [@restaurant, reservation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

